
<div class="results">

  <h1>{{teams.0.name}} ({{teams.0.mapsWon}}) x ({{teams.1.mapsWon}}) {{teams.1.name}}</h1>
  <h3>{{teams.0.eventName}} -- {{date}}</h3>

  <div class="scoreboard">
  {{#each teams}}
  <div>
    <div style="float:left">
      <img src='{{this.logo}}' width="50vw" height="50vh"></img>
    </div>
    <h2> {{this.name}}</h2>
  </div>
  <table>
    <tr>
      <th>Nick</th>
      <th>Abates</th>
      <th>Mortes</th>
      <th>Rating</th>
      <th>DPR</th>
      <th>KAST</th>
    </tr>
    {{#each this.players}}
    <tr>
      <td>{{this.nickname}}</td>
      <td>{{this.kills}}</td>
      <td>{{this.deaths}}</td>
      <td>{{this.rating}}</td>
      <td>{{this.ADR}}</td>
      <td>{{this.kast}}</td>
    </tr>
    {{/each}}
    </table>
  {{/each}}
  </div>
  <div class="map_result">
    <h2>Mapas</h2>
    <table>
      {{#each map_result}}
      <tr>
	<td><img src='/img/maps/{{this.map_name}}.jpeg' style="float:left; margin-left:2%;" width="300vw" height="200vh"></td>
	<td>
	  <div style="margin-left:10%">
	    <h4><nobr>{{this.map_name}} -- {{this.team1_name}} ({{this.team1_points}}) x ({{this.team2_points}}) {{this.team2_name}}</nobr></h4>
	    {{#if this.pick}}
	    Picked By: {{this.team1_name}}
	    {{else}}
	    Picked By: {{this.team2_name}}
	    {{/if}}
	  </div>
	</td>
	</td>
      </tr>
    {{/each}}
  </div>
</div>
